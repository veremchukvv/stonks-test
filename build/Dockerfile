FROM golang:1.16.8-alpine as builder
WORKDIR /app
COPY go.* ./
COPY ./configs/config_example.yml ./configs
RUN go mod download
ADD . ./

RUN apk update && apk add date
RUN GOOS=linux GOARCH=amd64 CGO_ENABLED=0 \
    go build -a -tags netgo -ldflags "-s -w -extldflags '-static'" \
    -o stonks-server ./cmd/stonks-server

FROM scratch as app
ARG BUILD_NUMBER
ARG GITSHA
ARG IS_PRODUCTION
ARG VK_CLIENT_ID
ARG VK_CLIENT_SECRET
ARG VK_REDIRECT_URL
ARG GOOGLE_CLIENT_ID
ARG GOOGLE_CLIENT_SECRET
ARG GOOGLE_REDIRECT_URL
ARG PG_DB_URL
ENV PORT=8000
ENV BUILD_NUMBER ${BUILD_NUMBER}
ENV GITSHA ${GITSHA}
ENV IS_PRODUCTION ${IS_PRODUCTION}
ENV VK_CLIENT_ID ${VK_CLIENT_ID}
ENV VK_CLIENT_SECRET ${VK_CLIENT_SECRET}
ENV VK_REDIRECT_URL ${VK_REDIRECT_URL}
ENV GOOGLE_CLIENT_ID ${GOOGLE_CLIENT_ID}
ENV GOOGLE_CLIENT_SECRET ${GOOGLE_CLIENT_SECRET}
ENV GOOGLE_REDIRECT_URL ${GOOGLE_REDIRECT_URL}
ENV PG_DB_URL ${PG_DB_URL}
WORKDIR /app
COPY --from=builder /app/stonks-server /app/stonks-server
ENTRYPOINT ["./stonks-server"]
EXPOSE $PORT